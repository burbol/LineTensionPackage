#!/bin/bash

#SBATCH -p main

#SBATCH --mem=2048
#SBATCH --job-name=1n_s50_w4_0
#SBATCH --output=1n_s50_w4000_0.out
#SBATCH --error=1n_s50_w4000_0.err

#SBATCH --mail-user=laila.e@fu-berlin.de
#SBATCH --mail-type=end
#SBATCH --mail-type=fail

#SBATCH --tasks-per-node=8
#SBATCH --nodes=1

#SBATCH --time=200:00:00

module load gromacs/single/2016

STARTTIME=$(date +%s)


cd /scratch/eixeres/Version_v2/s50_w4000

gmx grompp -f Mini_v2.mdp -c sam50_water4000.gro -p 50pc_4000.top -o Mini_sam50_water4000.tpr -maxwarn 9
gmx mdrun -deffnm Mini_sam50_water4000 -maxh 200 -v 
gmx grompp -f NVT_60ns_v2.mdp -c Mini_sam50_water4000.gro -p 50pc_4000.top -o NVT_sam50_water4000.tpr -maxwarn 9

gmx mdrun -s NVT_sam50_water4000.tpr -deffnm  NVT_sam50_water4000 -maxh 200 -v 

RUNTIME=$(($(date +%s)-$STARTTIME))

echo "the job took $RUNTIME seconds..."

if [[ $RUNTIME -lt 10 ]]; then
   echo "job took less than 10 seconds to run, aborting."
   exit
else
   echo "everything fine..."
   sbatch /scratch/eixeres/Version_v2/scripts/50_w4000/1n_s50_w4000_1
   fi

